@page "/AgregarTramite/{Id:int?}"
@rendermode InteractiveServer
@inject NavigationManager Navegador;
@inject CasoDeUsoTramiteAlta CasoDeUsoTramiteAlta
@inject CasoDeUsoConsultaTramite CasoDeUsoConsultaTramite
@inject CasoDeUsoTramiteModificacion CasoDeUsoTramiteModificacion
@inject ServicioAutorizacion ServicioAutorizacion

@if (ServicioAutorizacion.PoseeElPermiso(ServicioAutorizacion.UsuarioActual.Id, Permiso.TramiteAlta) || ServicioAutorizacion.PoseeElPermiso(ServicioAutorizacion.UsuarioActual.Id, Permiso.TramiteModificacion))
{
    <DialogoConfirmacion @ref="dialogo"/>
    @if (!nuevoTramite)
    {
        <h3>Modificando al tramite id "@tram.IdTramite"</h3>
    }
    else
    {
        <h3>Agregando un nuevo tramite</h3>
    }
    <input placeholder="ID Expediente" @bind="tram.IdExpediente" class="form-control">
    <select @bind="tram.Etiqueta" class="form-select-sm">
        <option value="0">Escrito Presentado</option>
        <option value="1">Pase A Estudio</option>
        <option value="2">Despacho</option>
        <option value="3">Resolucion</option>
        <option value="4">Notificacion</option>
        <option value="5">Pase Al Archivo</option>
    </select>
    <p>Etiqueta Seleccionado: @tram.Etiqueta</p>
    <input placeholder="Contenido" @bind="tram.Contenido" class="form-control">


    <button class="btn btn-primary" @onclick="Aceptar">Aceptar</button>
}
else
{
    <h2 class="bg-warning">No tienes permiso para acceder a esta pagina</h2>
}
@code {
    Tramite tram = new Tramite();
    [Parameter] public int? Id { get; set; }
    bool nuevoTramite = true;

    protected override void OnParametersSet()
    {
        if (Id != null)
        {
            Tramite tramBuscar = CasoDeUsoConsultaTramite.Ejecutar(Id.Value);
            if (tram != null)
            {
                tram = tramBuscar;
                nuevoTramite=false;
            }
        }
    }

    void Aceptar()
    {
        if(nuevoTramite)
        {
            @if (ServicioAutorizacion.PoseeElPermiso(ServicioAutorizacion.UsuarioActual.Id, Permiso.TramiteAlta))
            {
                try
                {
                    CasoDeUsoTramiteAlta.Ejecutar(tram, ServicioAutorizacion.UsuarioActual.Id);
                    Navegador.NavigateTo("listadoTramites");
                }
                catch(Exception e)
                {
                    errorValidacion(e.Message);
                }
                
            }
        }
        else
        {
            @if (ServicioAutorizacion.PoseeElPermiso(ServicioAutorizacion.UsuarioActual.Id, Permiso.TramiteModificacion))
            {
                try
                {
                    CasoDeUsoTramiteModificacion.Ejecutar(tram, ServicioAutorizacion.UsuarioActual.Id);
                    Navegador.NavigateTo("listadoTramites");
                }
                catch(Exception e)
                {
                    errorValidacion(e.Message);
                }
            }
        }
       
    }

    DialogoConfirmacion dialogo = null!;
    private void errorValidacion(string error)
    {
        dialogo.Mensaje = error;
        dialogo.Mostrar(); 
    }
}
